{
	"extends": "tslint-config-standard",
	"rules": {
		"ter-indent": ["error", "tab", 4],
		"semicolon": [true, "always"],
		"space-before-function-paren": [true, {
			"anonymous": "always",
			"named": "never",
			"asyncArrow": "always"
		}],
		"newline-per-chained-call": ["error"],
		"no-unused-variable": [true]
	}
}
